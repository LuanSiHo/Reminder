<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="#fff"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="10">

    <LinearLayout
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/img_task_icon"
            android:layout_width="@dimen/img_task_item_size"
            android:layout_height="@dimen/img_task_item_size"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7.25"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_task_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Clean your room"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_tast_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="27 Sept 2015, 22:30"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />

        <TextView
            android:textColor="@color/textColorPrimary"
            android:id="@+id/tv_task_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Default" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkbox_task_item"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="0.75" />
</LinearLayout>